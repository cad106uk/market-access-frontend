{% macro summaryGroup( params ) %}
	{% set headingLevel = params.heading.level if params.heading.level else '2' %}
	<section class="summary-group">
		<h{{ headingLevel }} class="summary-group__heading{{ (' summary-group__heading--sub') if params.heading.level == 3 }}">{{ params.heading.text }}</h{{ headingLevel }}>
		<dl class="summary-group__list">
			{% for item in params.items %}
			<dt class="summary-group__list__key">{{ item.title }}</dt>
			<dd class="summary-group__list__value">{{ item.text }}</dd>
			{% endfor %}
		</dl>
	</section>
{% endmacro %}
