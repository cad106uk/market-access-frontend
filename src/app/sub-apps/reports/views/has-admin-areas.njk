{% from 'components/select/macro.njk' import govukSelect %}
{% from 'components/radios/macro.njk' import govukRadios %}
{% from 'app-components/heading.njk' import heading %}

{% extends 'layout.njk' %}

{% block page_title %}{{ super() }} - Add - Location of the barrier{% endblock %}

{% block page_content %}

	{{ heading({
		back: { href: urls.reports.country( report.id ) },
		caption: 'Add a barrier',
		text: 'Location of the barrier',
		errors: errors
	}) }}

	<form action="{{ urls.reports.hasAdminAreas( report.id ) }}" method="POST" class="restrict-width">

		<input type="hidden" name="_csrf" value="{{ csrfToken }}">

		{{ govukSelect( {

			label: {
				text: "Exports to which country are affected by this issue?",
				classes: 'govuk-label--s'
			},
			id: 'country-disabled',
			name: 'country-disabled',
			classes: 'govuk-!-width-full',
			items: country,
            attributes: {
                disabled: true
            },
			errorMessage: errors | errorForName( 'country-disabled-1' )
		} ) }}

        {{ govukSelect( {
			id: 'country',
			name: 'country',
			classes: 'govuk-!-width-full visually-hidden',
			items: country,
			errorMessage: errors | errorForName( 'country' )
		} ) }}

        {{ govukRadios( {

			idPrefix: 'has-admin-areas',
			name: 'hasAdminAreas',
			classes: 'has-admin-areas',
			fieldset: {
				legend: {
					text: 'Does it affect the entire location or individual states/regions?',
					classes: 'govuk-fieldset__legend--s'
				}
			},
			items: hasAdminAreas ,
			errorMessage: errors | errorForName( 'has-admin-areas' )
			} )
		}}
        

		<input type="submit" class="govuk-button" value="Continue">

	</form>
{% endblock %}
