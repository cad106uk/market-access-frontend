{% macro barrierSummary( barrier ) %}
	<section class="barrier-summary">
		<div class='barrier-summary__heading'>
			{{ barrier.code }}
			<h1 class="barrier-summary__heading__text">{{ barrier.title }}</h1>
			<p class="barrier-summary__heading__country"> in {{ barrier.location }}</p>
			<p>
				<a href="{{ urls.barriers.edit.title( barrier.id ) }}">Edit title</a>
				or
				<a href="{{ urls.barriers.location.edit( barrier.id ) }}">location</a>
			</p>
		</div>
		<div class="barrier-summary__status">
			<span class="barrier-summary__status__badge barrier-status-badge barrier-status-badge--{{ barrier.status.modifyer }}">
				Status: <strong>{{ barrier.status.name }}</strong>
			</span>
			<span class="barrier-summary__priority">
				<span class="priority-marker priority-marker--{{ barrier.priority.modifyer }}"></span><strong>{{ barrier.priority.name }}</strong> priority
			</span>
			<a class="barrier-summary__status__link js-barrier-summary-link" href="{{ urls.barriers.status( barrier.id ) }}">change status</a>
			<a class="barrier-summary__status__link js-barrier-summary-link" href="{{ urls.barriers.edit.priority( barrier.id ) }}">change priority</a>
		</div>
	</section>
{% endmacro %}
