{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "List of reports",

	"type": "object",
	"required": [ "count", "results" ],
	"properties": {

		"count": {
			"type": "number",
			"faker": {
				"finance.amount": [ 1, 10, 0 ]
			}
		},

		"results": {
			"type": "array",
			"minItems": 1,
			"maxItems": 5,
			"items": {
				"$ref": "#/refs/report"
			}
		}
	},

	"refs": {
		"report": {
			"type": "object",
			"required": [ "id", "company_name", "problem_status", "company_id", "contact_id", "progress" ],
			"properties": {

				"id": {
					"type": "number",
					"faker": {
						"finance.amount": [ 0, 100, 0 ]
					}
				},

				"company_name": {
					"type": "string",
					"faker": "lorem.words"
				},

				"company_id": {
					"$ref": "$refs/common.json#/uuid"
				},

				"problem_status": {
					"type": "number",
					"enum": [ 1, 2, 3 ]
				},

				"contact_id": {
					"$ref": "$refs/common.json#/uuid"
				},

				"progress": {
					"type": "array",
					"minItems": 1,
					"maxItems": 4,
					"items": {
						"$ref": "#/refs/progress-item"
					}
				}
			}
		},

		"progress-item": {
			"type": "object",
			"required": [ "stage_code", "stage_desc", "status_id", "status_desc" ],
			"properties": {

				"stage_code": {
					"type": "string",
					"enum": [ "1.3", "1.4", "1.5", "2.0", "3.0" ]
				},

				"stage_desc": {
					"type": "string",
					"faker": "lorem.words"
				},

				"status_id": {
					"type": "number",
					"enum": [ 1, 2, 3 ]
				},

				"status_desc": {
					"type": "string",
					"pattern": "COMPLETED|IN PROGRESS"
				}
			}
		}
	}
}
