{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Metadata",

	"type": "object",
	"required": [ "status_types", "loss_range", "adv_boolean", "countries" ],
	"properties": {

		"status_types": {
			"type": "object",
			"required": [ "NOT_STARTED", "ACTIVE", "COMPLETE" ],
			"properties": {

				"NOT_STARTED": { "$ref": "$refs/common.json#/words" },
				"ACTIVE": { "$ref": "$refs/common.json#/words" },
				"COMPLETE": { "$ref": "$refs/common.json#/words" }
			}
		},

		"loss_range": {
			"type": "object",
			"required": [ "1", "2", "3", "4" ],
			"properties": {

				"1": { "$ref": "$refs/common.json#/words" },
				"2": { "$ref": "$refs/common.json#/words" },
				"3": { "$ref": "$refs/common.json#/words" },
				"4": { "$ref": "$refs/common.json#/words" }
			}
		},

		"adv_boolean": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": "Yes",
				"2": "No",
				"3": "Don't know"
			}
		},

		"countries": {
			"type": "array",
			"minItems": 20,
			"maxItems": 50,
			"items": {
				"$ref": "#/refs/country"
			}
		}
	},

	"refs": {
		"country": {
			"type": "object",
			"required": [ "id", "name", "disabled_on" ],
			"properties": {

				"id": { "$ref": "$refs/common.json#/uuid" },

				"name" : {
					"type": "string",
					"faker": "address.country"
				},

				"disabled_on": {
					"oneOf": [
						{ "type": "null" },
						{
							"type": "string",
							"faker": "date.past"
						}
					]
				}
			}
		}
	}
}
