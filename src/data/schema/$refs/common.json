{
	"uuid": {
		"type": "string",
		"faker": "random.uuid"
	},

	"word": {
		"type": "string",
		"faker": "lorem.word"
	},

	"words": {
		"type": "string",
		"faker": "lorem.words"
	},

	"paragraph": {
		"type": "string",
		"faker": "lorem.paragraph"
	},

	"int": {
		"type": "number",
		"faker": "random.number"
	},

	"small-int": {
		"type": "number",
		"faker": {
			"finance.amount": [ 1, 20, 0 ]
		}
	},

	"past-date": {
		"type": "string",
		"faker": "date.past"
	},

	"boolean": {
		"type": "boolean",
		"faker": "random.boolean"
	},

	"country": {
		"type": "object",
		"required": [ "id", "name", "disabled_on" ],
		"properties": {

			"id": { "$ref": "#/uuid" },

			"name" : {
				"type": "string",
				"faker": "address.country"
			},

			"disabled_on": {
				"oneOf": [
					{ "type": "null" },
					{
						"type": "string",
						"faker": "date.past"
					}
				]
			}
		}
	},

	"sector": {
		"type": "object",
		"required": [ "id", "name", "level", "disabled_on" ],
		"properties": {

			"id": { "$ref": "#/uuid" },
			"name" : { "$ref": "#/words" },
			"level": {
				"enum": [ 0, 1, 2 ]
			},
			"disabled_on": {
				"oneOf": [
					{ "type": "null" },
					{
						"type": "string",
						"faker": "date.past"
					}
				]
			}
		}
	},

	"barrier_type": {
		"type": "object",
		"required": [ "id", "title", "description", "category" ],
		"properties": {

			"id": { "$ref": "#/int" },
			"title": { "$ref": "#/words" },
			"description": { "$ref": "#/paragraph" },
			"category": {
				"type": "string",
				"pattern": "GOODS|SERVICES"
			}
		}
	}
}
