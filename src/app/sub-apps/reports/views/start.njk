{% from 'components/radios/macro.njk' import govukRadios %}
{% from 'app-components/heading.njk' import heading %}

{% extends 'layout.njk' %}

{% block page_title %}{{ super() }} - Report - Status of the barrier{% endblock %}

{% block page_content %}

	{{ heading({
		caption: 'Report a barrier',
		text: 'Status of the barrier',
		errors: errors
	}) }}

	<form action="{{ urls.reports.start( report.id ) }}" method="POST">
		<input type="hidden" name="_csrf" value="{{ csrfToken }}">

		{{ govukRadios({
			name: 'status',
			classes: 'problem-status',
			fieldset: {
				legend: {
					text: 'What is the urgency of the barrier?',
					classes: 'govuk-fieldset__legend--s'
				}
			},
			items: status | addToRadio( {
				'1': { hint: { text: 'e.g. goods stuck at the border or documentation issue' } },
				'2': { hint: { text: 'e.g. a change of regulation' } }
			} ),
			errorMessage: errors | errorForName( 'status-1' )
		}) }}

		<input type="submit" value="Continue" class="govuk-button">
	</form>
{% endblock %}
