{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Metadata",

	"type": "object",
	"required": [ "status_types", "loss_range", "adv_boolean", "govt_response", "publish_response", "report_stages", "support_type", "barrier_types", "countries" ],
	"properties": {

		"status_types": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": { "$ref": "$refs/common.json#/words" },
				"2": { "$ref": "$refs/common.json#/words" },
				"3": { "$ref": "$refs/common.json#/words" }
			}
		},

		"loss_range": {
			"type": "object",
			"required": [ "1", "2", "3", "4" ],
			"properties": {

				"1": { "$ref": "$refs/common.json#/words" },
				"2": { "$ref": "$refs/common.json#/words" },
				"3": { "$ref": "$refs/common.json#/words" },
				"4": { "$ref": "$refs/common.json#/words" }
			}
		},

		"adv_boolean": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": "Yes",
				"2": "No",
				"3": "Don't know"
			}
		},

		"govt_response": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": { "$ref": "$refs/common.json#/words" },
				"2": { "$ref": "$refs/common.json#/words" },
				"3": { "$ref": "$refs/common.json#/words" }
			}
		},

		"publish_response": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": "Yes",
				"2": "No",
				"3": { "$ref": "$refs/common.json#/words" }
			}
		},

		"report_stages": {
			"type": "object",
			"required": [ "1.0", "1.1", "1.2", "1.3", "1.4", "1.5", "1.6", "1.7", "2.0", "2.1", "2.2" ],
			"properties": {

				"1.0": { "$ref": "$refs/common.json#/words" },
				"1.1": { "$ref": "$refs/common.json#/words" },
				"1.2": { "$ref": "$refs/common.json#/words" },
				"1.3": { "$ref": "$refs/common.json#/words" },
				"1.4": { "$ref": "$refs/common.json#/words" },
				"1.5": { "$ref": "$refs/common.json#/words" },
				"1.6": { "$ref": "$refs/common.json#/words" },
				"1.7": { "$ref": "$refs/common.json#/words" },
				"2.0": { "$ref": "$refs/common.json#/words" },
				"2.1": { "$ref": "$refs/common.json#/words" },
				"2.2": { "$ref": "$refs/common.json#/words" }
			}
		},

		"support_type": {
			"type": "object",
			"required": [ "1", "2" ],
			"properties": {

				"1": { "$ref": "$refs/common.json#/words" },
				"2": { "$ref": "$refs/common.json#/words" }
			}
		},

		"barrier_types": {
			"type": "array",
			"minItems": 10,
			"maxItems": 20,
			"items": {
				"type": "object",
				"required": [ "id", "title", "description", "category" ],
				"properties": {

					"id": { "$ref": "$refs/common.json#/int" },
					"title": { "$ref": "$refs/common.json#/words" },
					"description": { "$ref": "$refs/common.json#/paragraph" },
					"category": {
						"type": "string",
						"pattern": "GOODS|SERVICES"
					}
				}
			}
		},

		"countries": {
			"type": "array",
			"minItems": 20,
			"maxItems": 50,
			"items": {
				"$ref": "#/refs/country"
			}
		}
	},

	"refs": {
		"country": {
			"type": "object",
			"required": [ "id", "name", "disabled_on" ],
			"properties": {

				"id": { "$ref": "$refs/common.json#/uuid" },

				"name" : {
					"type": "string",
					"faker": "address.country"
				},

				"disabled_on": {
					"oneOf": [
						{ "type": "null" },
						{
							"type": "string",
							"faker": "date.past"
						}
					]
				}
			}
		}
	}
}
