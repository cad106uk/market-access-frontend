{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Metadata",

	"type": "object",
	"required": [ "status_types", "loss_range", "adv_boolean" ],
	"properties": {

		"status_types": {
			"type": "object",
			"required": [ "NOT_STARTED", "ACTIVE", "COMPLETE" ],
			"properties": {

				"NOT_STARTED": { "$ref": "#/refs/string" },
				"ACTIVE": { "$ref": "#/refs/string" },
				"COMPLETE": { "$ref": "#/refs/string" }
			}
		},

		"loss_range": {
			"type": "object",
			"required": [ "1", "2", "3", "4" ],
			"properties": {

				"1": { "$ref": "#/refs/string" },
				"2": { "$ref": "#/refs/string" },
				"3": { "$ref": "#/refs/string" },
				"4": { "$ref": "#/refs/string" }
			}
		},

		"adv_boolean": {
			"type": "object",
			"required": [ "1", "2", "3" ],
			"properties": {

				"1": "Yes",
				"2": "No",
				"3": "Don't know"
			}
		}
	},

	"refs": {
		"string": {
			"type": "string",
			"faker": "lorem.words"
		}
	}
}
